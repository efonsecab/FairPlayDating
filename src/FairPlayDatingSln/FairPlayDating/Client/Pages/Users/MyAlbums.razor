<h3>MyAlbums</h3>



<div class="container">
    <div class="row">
        <div class="col">
            <button type="button" @onclick="@( async () => await OnNextPageClick())">Next Page</button>
        </div>
    </div>
    @if (PageAlbums != null)
    {
        @foreach (var singleAlbum in PageAlbums.data)
        {
            <div class="row">
                <div class="col">
                    <div class="card" style="width: 18rem;">
                        <div class="card-header">@singleAlbum.name</div>
                        <img src="@singleAlbum.picture.data.url" class="card-img-top" alt="...">
                        <div class="card-body">
                            <p class="card-text">@singleAlbum.description</p>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>